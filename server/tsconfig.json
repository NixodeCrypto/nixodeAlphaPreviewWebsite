{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./*"],
      "@/public": ["./public/*"]
    }
  },
  "include": ["./package.json", ".env", "**/*.ts"],
  "exclude": ["node_modules"]
}
