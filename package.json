{
  "name": "nixode-website",
  "description": "website for nixode.com",
  "version": "1.0.0",
  "private": true,
  "author": "Heril Saha <herilsaha06@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\"",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --write",
    "postinstall": "husky install",
    "commit": "cz",
    "test": "jest ---passWithNoTests --detectOpenHandles --runInBand --ci --reporters=default --reporters=jest-junit --coverage --coverageDirectory=coverage",
    "test:watch": "jest --passWithNoTests --watchAll",
    "test:update": "jest --updateSnapshot"
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "yarn lint --fix",
      "yarn format"
    ]
  },
  "dependencies": {
    "@babel/core": "7.15.8",
    "@babel/preset-env": "7.15.8",
    "@emotion/babel-plugin": "11.3.0",
    "@emotion/core": "11.0.0",
    "@emotion/css": "11.5.0",
    "@emotion/jest": "11.5.0",
    "@emotion/react": "11.5.0",
    "@emotion/styled": "11.3.0",
    "facepaint": "1.2.1",
    "next": "11.1.2",
    "polished": "4.1.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-feather": "2.0.9",
    "react-test-renderer": "17.0.2",
    "styled-map": "3.3.0",
    "styled-system": "5.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "13.2.0",
    "@commitlint/config-conventional": "13.2.0",
    "@types/enzyme": "3.10.9",
    "@types/jest": "27.0.2",
    "@types/node": "14.17.20",
    "@types/react": "17.0.27",
    "@types/react-dom": "17.0.9",
    "@types/react-test-renderer": "17.0.1",
    "@types/styled-system": "5.1.13",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "ansi-regex": "6.0.1",
    "babel-jest": "27.3.1",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "enzyme": "3.11.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "7.0.2",
    "jest": "27.3.1",
    "jest-enzyme": "7.1.2",
    "jest-junit": "13.0.0",
    "jest-watch-typeahead": "1.0.0",
    "lint-staged": "11.2.0",
    "prettier": "2.4.1",
    "typescript": "4.4.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
