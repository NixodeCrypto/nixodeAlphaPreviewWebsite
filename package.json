{
  "name": "nixode-website",
  "description": "website for nixode.com",
  "version": "1.0.0",
  "private": true,
  "author": "Heril Saha <herilsaha06@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\"",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --write",
    "postinstall": "husky install",
    "commit": "cz",
    "e2e:run": "next build && start-server-and-test start http://localhost:3000 'cypress run'",
    "e2e:open": "next build && start-server-and-test start http://localhost:3000 'cypress open'",
    "test": "jest ---passWithNoTests --maxWorkers=50%",
    "test:watch": "jest --passWithNoTests --watchAll --maxWorkers=25%",
    "test:update": "jest --updateSnapshot --maxWorkers=50%",
    "test:ci": "jest ---passWithNoTests --detectOpenHandles --runInBand --ci --reporters=default --reporters=jest-junit --coverage"
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "yarn lint --fix",
      "yarn format"
    ]
  },
  "dependencies": {
    "@babel/core": "7.15.8",
    "@babel/preset-env": "7.15.8",
    "@cypress/react": "5.10.1",
    "@emotion/babel-plugin": "11.3.0",
    "@emotion/core": "11.0.0",
    "@emotion/css": "11.5.0",
    "@emotion/jest": "11.5.0",
    "@emotion/react": "11.5.0",
    "@emotion/styled": "11.3.0",
    "@styled-system/core": "5.1.2",
    "@testing-library/cypress": "8.0.1",
    "@testing-library/react": "12.1.2",
    "@types/chai": "4.2.22",
    "@types/chai-as-promised": "7.1.4",
    "@types/enzyme": "3.10.10",
    "@types/react-test-renderer": "17.0.1",
    "@types/sinon-chai": "3.2.5",
    "@wojtekmaj/enzyme-adapter-react-17": "0.6.5",
    "chai-as-promised": "7.1.1",
    "facepaint": "1.2.1",
    "html-webpack-plugin": "5.5.0",
    "next": "11.1.2",
    "polished": "4.1.3",
    "prop-types": "15.7.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-feather": "2.0.9",
    "sinon-chai": "3.7.0",
    "start-server-and-test": "1.14.0",
    "styled-map": "3.3.0",
    "styled-system": "5.1.5",
    "webpack": "5.61.0",
    "webpack-dev-server": "4.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "13.2.1",
    "@commitlint/config-conventional": "13.2.0",
    "@cypress/webpack-preprocessor": "5.9.1",
    "@types/jest": "27.0.2",
    "@types/mocha": "9.0.0",
    "@types/node": "16.11.6",
    "@types/react": "17.0.33",
    "@types/react-dom": "17.0.10",
    "@types/styled-system": "5.1.13",
    "@types/styled-system__core": "5.1.3",
    "@typescript-eslint/eslint-plugin": "5.2.0",
    "@typescript-eslint/parser": "5.2.0",
    "ansi-regex": "6.0.1",
    "babel-jest": "27.3.1",
    "chai": "4.3.4",
    "commitizen": "4.2.4",
    "cypress": "8.7.0",
    "cz-conventional-changelog": "3.3.0",
    "enzyme": "3.11.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.26.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "jest-enzyme": "7.1.2",
    "jest-junit": "13.0.0",
    "jest-watch-typeahead": "1.0.0",
    "lint-staged": "11.2.4",
    "mocha": "9.1.3",
    "prettier": "2.4.1",
    "react-test-renderer": "17.0.2",
    "set-value": "4.1.0",
    "ts-loader": "9.2.6",
    "typescript": "4.4.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
